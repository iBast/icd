{% extends "base.html.twig" %}

{% block title %}
	{% if not training.id %}
		Ajout d'un entrainement
	{% else %}
		Modification d'un entrainement
	{% endif %}
{% endblock %}

{% block body %}
	{% if not training.id %}
		<h1>Ajout d'un entrainement</h1>
	{% else %}
		<h1>Edition</h1>
	{% endif %}
	<div class="container">
		{{form_start(form)}}
		<div class="row">
			<div class="col-md-9">
				{{form_row(form.content)}}
			</div>
			<div class="col-md-3">
				{{form_row(form.date)}}
				{{form_row(form.sport)}}
			</div>
		</div>
		<div class="d-flex justify-content-end">
			{% if not training.id  %}
				<button type="submit" class="btn btn-success">Ajouter la course</button>
			{% else %}
				<button type="submit" class="btn btn-success">Modifier la course</button>
			{% endif %}
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
