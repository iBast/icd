{% extends "@EasyAdmin/layout.html.twig" %}

{% block page_title %}
	Compte
{% endblock %}

{% block content %}
	<article class="content">
		<section class="content-header">
			<div class="content-header-title">
				<h1>Compte
					{{account.name}}</h1>
			</div>
			<div class="page-actions">
				<div class="global-actions">
					<a href="{{ ea_url().setRoute('admin_accounting_accounts') }}" class="action-new btn btn-primary">Retour</a>
				</div>
			</div>

		</section>
		<section class="content-body">
			<div class="jumbotron">

				<table class="table">
					<thead>
						<tr>
							<th>Date</th>
							<th>Libélé</th>
							<th>Débit</th>
							<th>Crédit</th>
						</tr>
					</thead>
					<tbody>
						{% for line in account.accountings %}
							<tr>
								<td>{{line.date | date('d/m/Y')}}</td>
								<td>{{line.wording}}</td>
								<td>{{line.debit | amount}}</td>
								<td>{{line.credit | amount}}</td>
							</tr>
						{% endfor %}
					</tbody>
					<tfoot>
						<tr>
							<td></td>
							<td></td>
							<td>{{account.debit | amount}}</td>
							<td>{{account.credit | amount}}</td>
						</tr>
					</tfoot>
				</table>

			</div>
		</section>
	</article>
{% endblock %}
