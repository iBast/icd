{% extends "base.html.twig" %}

{% block title %}
	Compte
	{{member.firstName}}
{% endblock %}

{% block body %}
	<h1>Historique des transactions de
		{{member.firstName}}</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Libélé</th>
				<th>Débit</th>
				<th>Crédit</th>
			</tr>
		</thead>
		<tbody>
			{% for line in lines %}
				<tr>
					<td>{{line.date | date('d/m/Y') }}</td>
					<td>{{ line.wording }}</td>
					<td>{{ line.debit | amount}}</td>
					<td>{{ line.credit | amount}}</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td></td>
				<td></td>
				<td>{{debit | amount}}</td>
				<td>{{credit | amount}}</td>
			</tr>
		</tfoot>
	</table>
{% endblock %}
