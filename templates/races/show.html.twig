{% extends "base.html.twig" %}

{% block title %}
	{{race.name}}
{% endblock %}

{% block body %}

	<div class="row mb-3">
		<div class="col-md-8">
			<h1>{{race.name}}</h1>
			<h2>
				<small class="text-muted">
					{{race.date | date('d/m/Y')}}
					-
					{{race.location}}</small>
			</h2>
			<h3>Informations :</h3>
			<p>{{race.description}}</p>

			<p>Informations :
				<a href="{{race.link}}">{{race.link}}</a>
			</p>
			<p>Inscriptions :
				<a href="{{race.signInLink}}">{{race.signInLink}}</a>
			</p>

		</div>
		<div class="col-md-4">
			<div class="mb-5 d-flex justify-content-end">
				<a href="{{path('races_home')}}" class="btn btn-primary">Retour aux courses</a>
			</div>
			<h3>Participation</h3>
			<ul class="list-group">


				{% for member in app.user.members %}
					{% if member in  race.registratedMember %}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span>{{member.firstName}}
								{{member.lastName}}

							</span>
							<span class="badge bg-danger rounded-pill">
								<form action="#" method="post">
									<input type="hidden" name="memberId" value="{{member.id}}">
									<input type="submit" class="btn btn-danger" value="Ne Participe pas">
								</form>
							</span>
						</li>
					{% else %}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span>{{member.firstName}}
								{{member.lastName}}

							</span>
							<span class="badge bg-primary rounded-pill">
								<form action="#" method="post">
									<input type="hidden" name="memberId" value="{{member.id}}">
									<input type="submit" class="btn btn-primary" value="Participe">
								</form>
							</span>
						</li>
					{% endif %}


				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8">
			<h3>Discussion</h3>
			<div class="mb-5">
				{{form_start(form)}}
				{{form_row(form.content)}}
				<div class="d-flex justify-content-end">
					<button class="btn btn-success">Ajouter mon commentaire</button>
				</div>
				{{form_end(form)}}
			</div>
			{% if race.eventComments is empty %}
				<p>Il n'y a pas encore de commentaire n'hésite pas a en ajouter.</p>
			{% else %}
				<div class="mt-5">
					{% if pinnedComments %}
						<h4>Commentaires épinglés :</h4>
						{% for comment in pinnedComments %}
							<div class="card border-danger mb-3">
								<div class="card-header">
									{{comment.user.firstName}}
									{{comment.user.lastName}}
									a écrit
									<i class="float-end">
										<div class="d-flex">
											<p>
												le
												{{comment.createdAt | date('d/m/y')}}
												à
												{{comment.createdAt | date('H:i')}}
											</p>
											<form action="#" method="post" class="ms-2 me-2">
												<input type="hidden" name="pinComment" value="{{comment.id}}">
												<button type="submit" class="btn btn-light btn-sm">
													<i class="fas fa-thumbtack"></i>
												</button>
											</form>
											<form action="#" method="post">
												<input type="hidden" name="pinComment" value="{{comment.id}}">
												<button type="submit" class="btn btn-light btn-sm">
													<i class="fas fa-trash"></i>
												</button>
											</form>
										</div>
									</i>
								</div>
								<div class="card-body">
									<p class="card-text">{{comment.content}}</p>
								</div>
							</div>
						{% endfor %}
						<br>
					{% endif %}
					<h4>Commentaires :</h4>
					{% for comment in comments %}
						<div class="card border-primary mb-3">

							<div class="card-header">
								{{comment.user.firstName}}
								{{comment.user.lastName}}
								a écrit
								<i class="float-end">
									<div class="d-flex">
										<p>
											le
											{{comment.createdAt | date('d/m/y')}}
											à
											{{comment.createdAt | date('H:i')}}
										</p>
										<form action="#" method="post" class="ms-2 me-2">
											<input type="hidden" name="pinComment" value="{{comment.id}}">
											<button type="submit" class="btn btn-light btn-sm">
												<i class="fas fa-thumbtack"></i>
											</button>
										</form>
										<form action="#" method="post">
											<input type="hidden" name="pinComment" value="{{comment.id}}">
											<button type="submit" class="btn btn-light btn-sm">
												<i class="fas fa-trash"></i>
											</button>
										</form>
									</div>
								</i>
							</div>
							<div class="card-body">
								<p class="card-text">{{comment.content}}</p>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endif %}

		</div>
		<div class="col-md-4">
			<h3>Participants</h3>
			{% if race.registratedMember is empty %}
				<p>Il n'y a pas encore de membre du club inscrit a cette course</p>
			{% else %}
				<ul>
					{% for member in race.registratedMember  %}
						<li>{{member.firstName}}
							{{member.lastName}}</li>
					{% endfor %}
				</ul>
			{% endif %}
		</div>
	</div>
{% endblock %}
